{
  "PreToolUse": [
    {
      "matcher": "mcp__.*",
      "hooks": [
        {
          "type": "command",
          "command": "${PLUGIN_DIR}/hooks/mcp-security-scanner.sh"
        }
      ]
    },
    {
      "matcher": "(Edit|Write|Bash|Task).*",
      "hooks": [
        {
          "type": "command",
          "command": "${PLUGIN_DIR}/hooks/protect-main-branch.sh"
        }
      ]
    }
  ]
}
